<Window x:Class="SymbolPad.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About SymbolPad" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="主页面快捷键：Ctrl+Shift+[" Margin="0,0,0,10" FontSize="14"/>
            <TextBlock Text="搜索页面快捷键：Ctrl+Shift+]" Margin="0,0,0,10" FontSize="14"/>
            <TextBlock Margin="0,0,0,10" FontSize="14">
                <Run Text="项目地址："/>
                <Hyperlink NavigateUri="https://github.com/Snowballl11/SymbolPad" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/Snowballl11/SymbolPad
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
